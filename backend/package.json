{
  "name": "dc-server",
  "version": "1.0.0",
  "description": "the backend of dungeon crawler",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/server.js",
    "build": "npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --delay 500ms -r dotenv/config build/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "author": "madrigal1",
  "license": "ISC",
  "dependencies": {
    "@types/morgan": "^1.9.2",
    "@types/node-fetch": "^2.5.10",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "form-data": "^3.0.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^15.0.2"
  }
}
